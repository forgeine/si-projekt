{% extends 'base.html.twig' %}

{% block title %}
    {{ page_title }}
{% endblock %}

{% block body %}
    <h1>{{ page_title }}</h1>
    {{ form_start(form, {'attr': {'id': 'delete-form'}}) }}
    {% if false == form.vars.valid %}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'danger',
            message: 'message.form_error'|trans,
        }%}
    {% endif %}
    {{ form_widget(form) }}
    <div class="form-group text-center">
        <input type="submit" value="{{ submit_label }}" class="btn btn-primary d-inline-block" style="width: 45%;"/>
        {% if back_to_list_path|default(false) %}
            <a href="{{ url(back_to_list_path) }}" class="btn btn-dark d-inline-block" style="width: 45%;">
                {{ 'action.back_to_list'|trans }}
            </a>
        {% endif %}
    </div>
    {{ form_end(form) }}
{% endblock %}